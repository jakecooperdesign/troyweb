{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
			<header class="gradient-light position-relative">
				<div class="position-absolute top-0 bottom-0 col-6 d-flex justify-content-center">
					<img src="{{ post.thumbnail.src }}">
				</div>
				<div class="image-wrapper py-5" style="background-image: url('{{site.url}}/wp-content/uploads/2024/03/hero-background.jpg'); background-size: cover;">
					<div class="container-content">
						<div class="col-6 offset-6">
							<h1 class="article-h1 text-orange">Troy Web Developers: {{ post.title }}</h1>
						</div>
					</div>
				</div>
				<div class="container-content py-5">
					<div class="col-6 offset-6">
						<dl>
							<dt class="font-sans">Species:</dt>
							<dd>{{post.species}}</dd>
							<dt class="font-sans">Skills:</dt>
							<dd>{{post.terms("skills")|join(', ')}}</dd>
						</dl>
					</div>
				</div>
			</header>

			<section class="about-me font-serif">
				<div class="container-content py-5">
					<div class="row">
						<h2 class="col">About Me:</h2>
						<div class="col-9 text-large">
							{{post.content}}
						</div>
					</div>
				</div>
			</section>

			<section class="core-values">
				<div class="container-content py-5">
					<h2>Core Values</h2>
				</div>
				<div class="triangle-up"></div>
				<div class="bg-orange">
					<div class="container-content py-5">
						<div class="row">
							{% for value in get_posts(post.core_values) %}
							<div class="core-value col text-center text-white px-5">
								<img src="{{value.thumbnail.src}}" alt="{{value.title}} Image" class="value-image mb-4">
								<h3 class="value-title italic tracking-loose text-white">{{value.title}}</h3>
								{{value.content}}
							</div>
							{% endfor %}
						</div>
					</div>
				</div>
				<div class="triangle-down"></div>
			</section>

			<section class="experience">
				<div class="container-content py-5">
					<div class="row">
						<div class="col-6">
							<div class="row">
								<h2 class="col">Experience</h2>
								<ul class="col text-large">
									{% for item in post.terms("experience") %}
										<li>{{item.title}}</li>
									{% endfor %}
								</ul>
							</div>
						</div>
						<div class="col-6 d-flex justify-content-center">
							<img src="{{site.url}}/wp-content/uploads/2024/03/code-image.png" alt="">
						</div>
					</div>
				</div>
			</section> 


		</article>
	</div><!-- /content-wrapper -->
{% endblock %}
